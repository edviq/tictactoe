#defining win moves

def winMove grid

	if grid[[0][0], [0][1], [0][2]] == 'playerX'
        return 'X'
    end 
    if grid[[2][0], [2][1], [2][2]] == 'playerX'
        return 'X'
    end 
    if grid[[0][0], [1][0], [2][0]] == 'playerX'
        return 'X'
    end
    if grid[[0][1], [1][1], [2][1]] == 'playerX'
        return 'X'
    end
    if grid[[0][2], [1][2], [2][2]] == 'playerX'
        return 'X'
    end
    if grid[[0][0], [1][1], [2][2]] == 'playerX'
        return 'X'
    end
    if grid[[2][0], [1][1], [0][2]] == 'playerX'
        return 'X'
    end


    if grid[[0][0], [0][1], [0][2]] == 'player0'
        return '0'
    end 
    if grid[[2][0], [2][1], [2][2]] == 'player0'
        return '0'
    end 
    if grid[[0][0], [1][0], [2][0]] == 'player0'
        return '0'
    end
    if grid[[0][1], [1][1], [2][1]] == 'player0'
        return '0'
    end
    if grid[[0][2], [1][2], [2][2]] == 'player0'
        return '0'
    end
    if grid[[0][0], [1][1], [2][2]] == 'player0'
        return '0'
    end
    if grid[[2][0], [1][1], [0][2]] == 'player0'
        return '0'
    end
end

puts "\n"
puts "It's a draw! Game Over!"
puts "\n"
