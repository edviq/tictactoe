#defining array, players and grid

grid = [[1, 2, 3], [4, 5, 6], [7, 8, 9]] 

playerX = 'X'

player0 = '0'


def printGrid grid

print (grid[0][0]), " ",(grid[0][1]), " ", (grid[0][2])
puts "\n"
print (grid[1][0]), " ",(grid[1][1]), " ", (grid[1][2])
puts "\n"
print (grid[2][0]), " ",(grid[2][1]), " ", (grid[2][2])
puts "\n"

end

#players intro

puts 'Player X, Enter your name'
player1 = gets.chomp.upcase

puts 'Player 0, Enter your name'
player2 = gets.chomp.upcase

print 'Game '+ player1 + ' vs ' + player2
puts "\n"

printGrid(grid)

#inputs from players where X and 0 are converted to integer.

